{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJs"
    }
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "/images/pages/search/*": [
        "styles/images/*"
      ],
      "css/*": [
        "styles/css/*"
      ]
    },
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "webpack.config.ts",
    "tsPaths2Alias.ts"
  ]
}
